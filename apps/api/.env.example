# =========================
# Application
# =========================
NODE_ENV=development
API_PORT=3001

# =========================
# Database (Supabase / PostgreSQL)
# =========================
# pgbouncer を使う場合
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?schema=factrail&pgbouncer=true

# Migration / direct access 用（pgbouncer=false）
DIRECT_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?schema=factrail

# =========================
# Supabase
# =========================
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_SERVICE_KEY=YOUR_SERVICE_ROLE_KEY

# =========================
# Security
# =========================
# 32文字以上のランダム文字列
ENCRYPTION_KEY=CHANGE_ME_32_CHARS_MINIMUM

# =========================
# Slack (OAuth)
# =========================
SLACK_CLIENT_ID=YOUR_SLACK_CLIENT_ID
SLACK_CLIENT_SECRET=YOUR_SLACK_CLIENT_SECRET
SLACK_REDIRECT_URI=http://localhost:3000/setup/slack/callback

# =========================
# GitHub
# =========================
GITHUB_WEBHOOK_SECRET=YOUR_GITHUB_WEBHOOK_SECRET

# =========================
# Redis (Bull Queue)
# =========================
REDIS_URL=redis://localhost:6379
